#!/usr/bin/env node
'use strict';

let ezs = require('ezs');

ezs.use(require('..'));

process.stdin.resume();
process.stdin.setEncoding('utf8');
process.stdin
  .pipe(ezs('JSONParse', { separator: 'hits.*' }))
  .pipe(ezs('flatten'))
  .pipe(ezs('standardize'))
  .pipe(ezs('CSVString', {format:'semicolon'}))
  .pipe(process.stdout);

